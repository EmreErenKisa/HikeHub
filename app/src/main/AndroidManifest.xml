<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HikeHub"
        tools:targetApi="31">
        <activity
            android:name=".ChallengeOngoing"
            android:exported="false" />
        <activity
            android:name=".ChallangeStart"
            android:exported="false" />
        <activity
            android:name=".CasualOngoing"
            android:exported="false" />
        <activity
            android:name=".Casual_Start"
            android:exported="false" />
        <activity
            android:name=".SuperScreen"
            android:exported="false" />
        <activity
            android:name=".CreateAccount"
            android:exported="false" />
        <activity
            android:name=".ChallengeFinish"
            android:exported="false" />
        <activity
            android:name=".CasualFinish"
            android:exported="false" />
        <activity
            android:name=".ProfileScreen"
            android:exported="false" />
        <activity
            android:name=".ProfileScreenActivity"
            android:exported="false" />
        <activity
            android:name=".UserScreen"
            android:exported="false" />
        <activity
            android:name=".FriendsScreen"
            android:exported="false" />
        <activity
            android:name=".ChatScreen"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/my_API_key" />

        <service
            android:name="MyNavigationService"
            android:foregroundServiceType="location" />

    </application>

</manifest>